@model List<ToDoTask>

@{
    ViewData["Title"] = "Show";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 100;
        color: #333; /* Dark text color for contrast */
        background: linear-gradient(135deg, #f8f9fa, #e9ecef); /* Light gradient background */
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 30px;
        background: #fff; /* White background */
        border-radius: 15px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1); /* Soft shadow */
        backdrop-filter: blur(10px); /* Subtle blur effect */
        border: 1px solid rgba(255, 255, 255, 0.2); /* Light border for depth */
    }

    h1 {
        text-align: center !important;
        color: #333; /* Dark text color */
        margin-bottom: 30px;
        font-size: 2.5rem;
        font-weight: 600;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05); /* Subtle text shadow */
    }

    .table-responsive {
        overflow-x: auto;
        border-radius: 10px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff; /* White background */
        color: #333; /* Dark text color */
        border-radius: 10px;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.1); /* Subtle border */
    }

        .table thead th {
            background-color: #f8f9fa; /* Light gray header background */
            font-weight: 600;
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid rgba(0, 0, 0, 0.1); /* Subtle divider */
        }

        .table tbody td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1); /* Subtle divider */
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .table tbody tr:hover td {
            background-color: rgba(0, 0, 0, 0.03); /* Smooth hover effect */
            transform: translateX(5px); /* Slight movement on hover */
        }

    .badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        display: inline-block;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

    .bg-warning {
        background-color: #ffc107 !important;
        color: #000 !important;
    }

    .bg-success {
        background-color: #28a745 !important;
    }

    .bg-primary {
        background-color: #007bff !important;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .btn {
        padding: 8px 12px;
        border: none;
        border-radius: 20px;
        color: #fff;
        text-decoration: none;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.3s ease;
        font-weight: 600;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
        }

    .btn-edit {
        background-color: #6a5acd; /* Edit button color */
    }

        .btn-edit:hover {
            background-color: #5a4ab5; /* Edit button hover color */
        }

    .btn-danger {
        background-color: #dc3545; /* Delete button color */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Delete button hover color */
        }
</style>

<div class="container">
    <h1>To-Do Tasks</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (item.Status == "Completed")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else if (item.Status == "In Progress")
                            {
                                <span class="badge bg-primary">In Progress</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-edit" href="/CRUD/Edit/@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/CRUD/Delete/@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>